@model Presentation.ViewModels.ProductVM
<div class="row">
    <div class="col-xs-2">
        <img class="img-responsive" src="../../Images/@Model.Image">
    </div>
    <div class="col-xs-4">
        <h4 class="product-name"><strong>@Model.Name</strong></h4><h4><small>@Model.Description</small></h4>
    </div>
    <div class="col-xs-6">
        <div class="col-xs-6 text-right">
            <h6><strong>@Model.Price<span class="text-muted">x</span></strong></h6>
        </div>
        <div class="col-xs-4">
            <input type="text" class="form-control input-sm" value="1">
        </div>
        <div class="col-xs-2">
            <button type="button" class="btn btn-link btn-md">
                <span class="glyphicon glyphicon-trash"> </span>
            </button>
        </div>
    </div>
</div>
<hr>